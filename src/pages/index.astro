---
import Layout from '../layouts/Layout.astro';

const response = await fetch('https://owen-wilson-wow-api.herokuapp.com/wows/random');
const data = await response.json();
---

<Layout title="WILSON!">
	<main>
		<h1 class="main-title">Your random <em>WOW</em> &gt;&gt;&gt; </h1>
		{data.map((item: any) => (
			<a href={`/movie/${item.movie.toLowerCase()}`}>{item.movie}</a>
		))}
	</main>
</Layout>

<style>
	.main-title {
		font-size: 24px;
		display: inline-block;
	}

	a {
		font-size: 24px;
	}
</style>
